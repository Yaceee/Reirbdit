doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous")
        title Edition - #{article.title}
        style
            include ./style/style.css
    body 
        header(class="navbar_")
            div(class="nav_padding")
                a(href="/" class="navbar_home")
                    div(class="navbar_logo_cont")
                        img(src="/img/logo.png", alt="logo" class="navbar_logo")
                    h3(class="vertical_center") Reirbdit
                div(class="nav-elements")
                    h3(class="vertical_center hello_") Hello #{login}
                    a(href="/profil" class="vertical_center" style="margin-right : 1rem;")
                        img(src="/img/profil_icon.png", alt="profil_icon" class="profil_icon")
                    form(method="post" action="/disconnect" name="logout" class="vertical_center")
                        input(type="submit" name="logout_button" value="Déconnexion" class="form_button")
        main(class="container")
            form(action="/edit_link_c/"+article.id method="post" class="new_art_cont")
                input(type="text" name="edit_art_title" id="edit_art_title" placeholder="Titre" class="new_art_title" value=article.title)
                input(type="url" name="edit_art_link" id="edit_art_link" placeholder="Lien" class="new_art_title" value=article.content)
                input(type="submit" name="edit_article_post" id="edit_article_post" class="form_button")

        script.
            let n_button = document.getElementById('edit_article_post')

            n_button.addEventListener('click', function(){
                if(!(document.getElementById("edit_art_title").value || document.getElementById("edit_art_link").value)){
                    alert("Les champs n'ont pas tous été remplis.")
                }
            })